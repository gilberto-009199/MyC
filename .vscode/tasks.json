{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks":
  [
    {
      "type": "shell",
      "label": "gcc.exe build main file",
      "command": "C:\\MinGW\\bin\\gcc.exe",
      "args":
      [
        "-g",
        "${workspaceFolder}\\main.c",
        "-o",
        "${workspaceFolder}\\main.exe"
      ],
      "options":
      {
        "cwd": "C:\\MinGW\\bin"
      }
    },
    {
      "type": "shell",
      "label": "gcc.exe build main file for prod",
      "command": "C:\\MinGW\\bin\\gcc.exe",
      "args":
      [
        "${workspaceFolder}\\main.c",
        "-o",
        "${workspaceFolder}\\mainProd.exe"
      ],
      "options":
      {
        "cwd": "C:\\MinGW\\bin"
      }
    }
  ]
}